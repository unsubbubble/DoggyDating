extends layout.jade

block nav

header
	nav
		div.navbar.row
			div.tall-col.col-3
				a(href="index.html")
					img(src="images/logo.png", alt="DoggyDates Logo")
					
div
	div.row
		div.col.col-3
		div.col.col-6.center-text
			h2 Start finding play dates for your dog!
	div.row
		div.col.col-4
		div.col.col-4
			form(method="post", action="discover.html")
				input.text-input(type="email", name="email", placeholder="Email")
				br
				input.text-input(type="password", name="password", placeholder="Password")
				br
				button.btn.btn-primary.pull-right Login
	
	div.row
		div.col.col-4
		div.col.col-4
			a(href="forgotten_password.html", style="font-size: 14px") Forgotten Password?
			br
			br
			br
			span.pull-text-left You can begin your journey with DoggyDates by creating an 
				a(href="registration.html") Account!
			