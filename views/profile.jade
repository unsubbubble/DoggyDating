extends auth_base.jade
block content
	br
	br
	form(action="/profile", method="post", enctype='multipart/form-data')
		div.row
			div.col.col-1
			div.col.col-3
				img(src="data:" + user.dog[0].picture.contentType + ";base64," + user.dog[0].picture.data, alt="Dog Profile Picture")
			div.col.col-6
				h2 Dog's Profile

				table.table-striped
					tr
						th Name
						td
							input.text-input(type="text", name="dog_name", value=user.dog[0].name, placeholder="Name", required)
					tr
						th Age
						td
							input.text-input(type="number", name="dog_age", value=user.dog[0].age, placeholder="Age", required)
					tr
						th Breed
						td
							input.text-input(type="text", name="dog_breed", value=user.dog[0].breed, placeholder="Breed", required)
					tr
						th Picture
						td
							input.text-input(type="file", name="dog_picture", accept="image/*")
				br
				br
				h2 Owner Profile
				table.table-striped
					tr
						th Name
						td
							input.text-input(type="text", name="name", value=user.name, placeholder="Name", required)
					tr
						th Suburb
						td
							input.text-input(type="text", name="address", value=user.suburb, placeholder="Address", required)
		div.row
			div.col.col-9
			div.col.col-2
				button.btn.btn-primary(type="submit", onclick="validateForm(this.form)") Update Profile